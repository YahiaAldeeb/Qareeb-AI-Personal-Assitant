<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom edge - Listening state (calm purple to blue) -->
    <item android:height="6dp" android:gravity="bottom">
        <shape>
            <gradient
                android:type="linear"
                android:startColor="#FF9D00FF"
                android:endColor="#FF0080FF"
                android:angle="0"/>
        </shape>
    </item>

    <!-- Bottom edge glow - subtle -->
    <item android:height="12dp" android:gravity="bottom">
        <shape>
            <gradient
                android:type="linear"
                android:startColor="#339D00FF"
                android:endColor="#00000000"
                android:angle="90"/>
        </shape>
    </item>

</layer-list>

