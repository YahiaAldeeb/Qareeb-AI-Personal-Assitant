<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom edge - Success state (green gradient) -->
    <item android:height="6dp" android:gravity="bottom" android:left="50dp" android:right="50dp">
        <shape>
            <gradient
                android:type="linear"
                android:startColor="#FF00FF88"
                android:endColor="#FF00FF00"
                android:angle="0"/>
        </shape>
    </item>

    <!-- Bottom edge glow - success glow -->
    <item android:height="25dp" android:gravity="bottom" android:left="50dp" android:right="50dp">
        <shape>
            <gradient
                android:type="linear"
                android:startColor="#6600FF88"
                android:endColor="#00000000"
                android:angle="90"/>
        </shape>
    </item>

</layer-list>

