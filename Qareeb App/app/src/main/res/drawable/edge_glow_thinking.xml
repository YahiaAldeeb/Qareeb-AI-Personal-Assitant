<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom edge - Thinking state (vibrant pulsing purple to blue) -->
    <item android:height="8dp" android:gravity="bottom">
        <shape>
            <gradient
                android:type="linear"
                android:startColor="#FFFF00FF"
                android:centerColor="#FF9D00FF"
                android:endColor="#FF0080FF"
                android:angle="0"/>
        </shape>
    </item>

    <!-- Bottom edge glow - more pronounced for thinking -->
    <item android:height="20dp" android:gravity="bottom">
        <shape>
            <gradient
                android:type="linear"
                android:startColor="#66FF00FF"
                android:centerColor="#339D00FF"
                android:endColor="#00000000"
                android:angle="90"/>
        </shape>
    </item>

</layer-list>

