<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom edge - Failed state (red gradient) -->
    <item android:height="6dp" android:gravity="bottom" android:left="22dp" android:right="9dp">
        <shape>
            <gradient
                android:type="linear"
                android:startColor="#FFFF0000"
                android:endColor="#FFFF4444"
                android:angle="0"/>
        </shape>
    </item>

    <!-- Bottom edge glow - error glow -->
    <item android:height="25dp" android:gravity="bottom" android:left="22dp" android:right="9dp">
        <shape>
            <gradient
                android:type="linear"
                android:startColor="#66FF0000"
                android:endColor="#00000000"
                android:angle="90"/>
        </shape>
    </item>

</layer-list>

